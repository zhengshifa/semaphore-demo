[Unit]
Description=MySQL Server {{ inventory_hostname }}
After=network.target

[Service]
User={{ user }}
Group={{ group }}
ExecStart={{ install_dir }}/bin/mysqld --defaults-file={{ conf_dir }}/my.cnf --daemonize
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target